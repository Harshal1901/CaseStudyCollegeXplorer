@model IEnumerable<CaseStudyClgXplorer.Models.College>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>


@Html.Raw(TempData["InsertMessage"])
@Html.Raw(TempData["UpdatetMessage"])
@Html.Raw(TempData["DeleteMessage"])


<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Poppins', sans-serif;
        font-size : 16px;
    }

    .container {
        padding-right: 10px;
        padding-left: 10px;
        margin-right: 0;
        margin-left: 0;
    }
</style>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

<div class="container margin-left: none">
    <table class="table table-bordered ">
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.CollegeId)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.CollegeName)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.UniversityName)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.State)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Facility)
                </th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CollegeId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CollegeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UniversityName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.State)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Facility)
                    </td>
                    <td>
                        @Html.ActionLink("Update", "Edit", new { id = item.CollegeId })|
                        @Html.ActionLink("Delete", "Delete", new { id = item.CollegeId })
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a href="@Url.Action("Create")">Add New Record</a>
</div>